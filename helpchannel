known_message = ''

end_loop = False

# Global variables end


# Set default locale
language = 'es'


def print_output(out):
    line = out.readline().decode('utf-8')
    print(line)
    while len(line)>0:
        time.sleep(0.1)
        line = out.readline().decode('utf-8')
        print(line)


class HelpChannel(Tk):
    """
    Main application class. It's responsible for showing user dialogs.
    """

    def __init__(self, server, key, *args, **kwargs):

        self.server = server
        self.key = key
        self.token = secrets.token_hex(3).upper()

        global connection_code
        connection_code = self.token

        global connection_host
        connection_host = self.server

        global connection_key
        connection_key = self.key

        Tk.__init__(self)

        self.container = Frame(self)
        self.container.pack(side="top", fill="both", expand=True,padx=10,pady=10)
        self.container.grid_rowconfigure(0, weight=1)
        self.container.grid_columnconfigure(0, weight=1)

        # Center in the screen
        windowWidth = self.winfo_reqwidth()
        windowHeight = self.winfo_reqheight()
         
        # Gets both half the screen width/height and window width/height
        positionRight = int(self.winfo_screenwidth()/2 - windowWidth/2)
        positionDown = int(self.winfo_screenheight()/2 - windowHeight/2)
         
        # Positions the window in the center of the page.
        self.geometry("+{}+{}".format(positionRight, positionDown))

        self.wm_title("Help Channel")

        self._frame = LoginFrame(parent=self.container, controller=self)


    def switch_frame(self, frame_class):
        """Destroys current frame and replaces it with a new one."""
        new_frame = frame_class(parent=self.container, controller=self)
        self._frame.destroy()
        self._frame = new_frame


    def open_connection(self):
        """
        Function to open connection between local vnc and remote vnc viewer 
        """
        global subproc_tunnel, rest_request_errormsg, status

        logging.info('Opening connection')
        status = '01-LOGGED'
        
        tunnelscript = os.environ['APPDIR'] + config_section_map("TunnelConfig")['command_full_path']
        command = [tunnelscript, self.server]
        if tunnelscript.endswith('.py'):
            # Use the same python
            command = [sys.executable, tunnelscript, self.server]

        logging.info('Starting tunnel...')
        subproc_tunnel = subprocess.Popen(command, stdout=subprocess.PIPE,
            shell=False)
        # Wait for "Tunnel connected to" message
        line = subproc_tunnel.stdout.readline().decode('utf-8')
        if len(line)>0:
            print(line)
        while not line.startswith('Tunnel connected to'):
            time.sleep(1)
            line = subproc_tunnel.stdout.readline().decode('utf-8')
            if len(line)>0:
                print(line)
            else:
                break
        
        if subproc_tunnel.poll() is not None:
            logging.error("Tunnel creation failed with code: %s"%(subproc_tunnel.returncode))
            logging.error("Tunnel creation command: %s"%(command))
            sys.exit(-1)

        

        subproc_tunnel_out = threading.Thread(target=print_output,
            args=(subproc_tunnel.stdout,))
        subproc_tunnel_out.start()

        command_full_path = os.environ['APPDIR'] + config_section_map("x11vncConfig")['command_full_path']
        repeater = config_section_map("x11vncConfig")['remote_repeater']
        port = config_section_map("x11vncConfig")['remote_port']

        connect_parameter = "repeater=ID:%s+KEY:%s+%s:%s" % (connection_code, connection_key, repeater, port,)

        command = [command_full_path,
            "-afteraccept","/bin/kill -SIGUSR1 %s"%(os.getpid()),
            "-connect", connect_parameter]

        global subproc_vnc
        logging.info('Starting x11vnc...')
        subproc_vnc = subprocess.Popen(command,
            stdout=subprocess.PIPE, stderr=subprocess.PIPE, shell=False)
            
        logging.info('Accepting the connection...')
        # Rest request to accept connection
        '''
        ok, errormsg = do_rest_request('/help-channel-client/accept')
        if not ok:
            showerror(_('Error'), _('Error accepting technician: %s')
                % (errormsg))
            kill_x11()
            sys.exit(0)
        '''
        global alive
        alive = False
        self.switch_frame(EstablishedConnection)


class LoginFrame(Frame):
